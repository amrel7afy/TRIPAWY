<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TRIPAWY" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky</item>
        <item name="colorPrimaryVariant">#03535C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/MenuItem</item>

    </style>

    <style name="ThemeOverlay.TRIPAWY.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    //Toolbar Styling

    <style name="Title" parent="android:Widget.Toolbar">
        <item name="fontFamily">@font/pantondemo_black</item>
        <item name="android:textSize">15dp</item>
    </style>

    //PopUp Menu Styling

    <style name="MenuItem" parent="android:Widget.PopupMenu">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    //Navigation Drawer Style

    <style name="NewFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

</resources>