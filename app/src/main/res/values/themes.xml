<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TRIPAWY" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky</item>
        <item name="colorPrimaryVariant">@color/sky</item>
        <item name="colorOnPrimary">@color/sky</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sky</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/MenuItem</item>

    </style>
    <style name="ThemeOverlay.TRIPAWY.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <style name="Theme.TRIPAWY.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.TRIPAWY.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TRIPAWY.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--new style is created here-->
    <style name="NewFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="Title" parent="android:Widget.Toolbar">
        <item name="fontFamily">@font/pantondemo_black</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="MenuItem" parent="android:Widget.PopupMenu">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

</resources>